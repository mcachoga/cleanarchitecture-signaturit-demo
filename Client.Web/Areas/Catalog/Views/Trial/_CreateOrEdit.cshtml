@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Signaturit.Web.Areas.Catalog.Models
@model TrialViewModel
<form id="create-form" method="post" asp-controller="Trial" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Name"]</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Name" name="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Defense</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Defense" name="Defense" class="form-control">
                    <span asp-validation-for="Defense" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Prosecutor</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Prosecutor" name="Prosecutor" class="form-control">
                    <span asp-validation-for="Prosecutor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>